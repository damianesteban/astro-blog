---
import HeaderLink from "./HeaderLink.astro";
import DarkModeToggle from "./DarkModeToggle.astro";
---

<header>
  <a
    class="unset absolute z-10 left-[50%] -top-[100rem] translate-x-[-50%] bg-white text-black px-8 py-2 focus:top-[initial]"
    href="#main"
  >
    Skip to content
  </a>
  <nav>
    <section class="text-text-bold">
      <ul class="unset flex gap-4 [&>li]:p-0">
        <li><HeaderLink href="/">Home</HeaderLink></li>
        <li><HeaderLink href="/about">About</HeaderLink></li>
      </ul>
    </section>
  </nav>
  <div
    class="max-[375px]:hidden justify-self-end py-4 flex items-center content-center text-text-bold"
  >
  <a
    class="unset text-xl ml-4 hover:text-text-link"
    href="https://www.linkedin.com/in/damianesteban/"
  >
    <i
      class="fa-brands fa-linkedin"
      aria-hidden="true"
      title="Damian Esteban on LinkedIn"></i>
    <span class="fa-sr-only">Damian Esteban on LinkedIn</span>
  </a>
    <a
      class="unset text-xl ml-4 hover:text-text-link"
      href="https://github.com/damianesteban"
    >
      <i
        class="fa-brands fa-github"
        aria-hidden="true"
        title="Damian Esteban on Github"></i>
      <span class="fa-sr-only">Damian Esteban on Github</span>
    </a>
    <a
      class="unset text-xl ml-4 hover:text-text-link"
      href="https://twitter.com/estebanrules"
    >
      <i
        class="fa-brands fa-twitter"
        aria-hidden="true"
        title="Damian Esteban on Twitter"></i>
      <span class="fa-sr-only">Damian Esteban on Twitter</span>
    </a>
    <a
      class="unset text-xl ml-4 hover:text-text-link"
      href="https://www.quora.com/profile/Damian-Esteban"
    >
      <i
        class="fa-brands fa-quora"
        aria-hidden="true"
        title="Damian Esteban on Quora"></i>
      <span class="fa-sr-only">Damian Esteban on Twitter</span>
    </a>
    <a
      class="unset text-xl ml-4 hover:text-text-link"
      href="https://opensea.io/assets/ethereum/0x57f1887a8bf19b14fc0df6fd9b2acc9af147ea85/54538626618271092915778776911774881509035129167404463609312877729830261282318"
    >
      <i
        class="fa-brands fa-ethereum"
        aria-hidden="true"
        title="Damian Esteban on ENS"></i>
      <span class="fa-sr-only">Damian Esteban on ENS</span>
    </a>
    <a
      class="unset text-xl ml-4 hover:text-text-link"
      href="https://pinboard.in/u:damianesteban"
    >
      <i
        class="fa-brands fa-pinboard"
        aria-hidden="true"
        title="Damian Esteban on Pinboard"></i>
      <span class="fa-sr-only">Damian Esteban on ENS</span>
    </a>
  </div>
  <DarkModeToggle />
</header>
<style>
  header {
    grid-area: header;
    display: grid;
    align-items: center;
    grid-template-columns: minmax(0, 1fr) minmax(0, max-content) minmax(
        0,
        max-content
      );
  }
</style>
